@model Role

@{
    ViewData["Title"] = "Создать аккаунт";
}
<h1>Создать аккаунт</h1>
<form asp-action="Создать">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Логин пользователя (почта):</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div>
        <label>
            Пароль пользователя:
        </label>
        <input class="form-control" />
    </div>
    <div>
        <label>
            Информация о себе:
        </label>
        <input class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Создать пользователя" class="btn btn-outline-success" />
    </div>
</form>

<div>
    <a asp-action="Index">Назад</a>
</div>
